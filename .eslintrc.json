{
  "env": {
    "amd": true,
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "angular": "readonly",
    "logger": "readonly",
    "moment": "readonly",
    "pdfMake": "readonly",
    "validator": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "eqeqeq": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
